{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<body class="hold-transition register-page">
<div class="register-box">
    <div class="register-logo">
        <a href=""><b>DarbuotojuIrangos</b>IS</a>
    </div>

    <div class="register-box-body">
        <p class="login-box-msg">Registruotis</p>

        {{ form_start(registrationForm) }}

        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

        {% if error %}
            <div class="alert alert-danger">{{ error }}</div>
        {% endif %}

        <div class="form-group has-feedback">
                {{ form_row(registrationForm.email, {'attr': {'class':'form-control', 'placeholder': 'El. pastas'}}) }}
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Slaptazodis'}}) }}
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row justify-content-center">
                <div class="col-xs-8">
                    <div class="checkbox">
                        <label>
                            {{ form_row(registrationForm.agreeTerms) }}
{#                            <input type="checkbox"> I agree to the <a href="#">terms</a>#}
                        </label>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Registruotis</button>
                </div>
                <!-- /.col -->
            </div>
        {{ form_end(registrationForm) }}

        <a href="{{ path("app_login") }}" class="text-center">As jau turiu naudotojo paskyra</a>
    </div>
    <!-- /.form-box -->
</div>
<!-- /.register-box -->

</body>

{% endblock %}
