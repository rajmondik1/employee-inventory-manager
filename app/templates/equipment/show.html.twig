{% extends 'base.html.twig' %}

{% block title %}Equipment{% endblock %}

{% block body %}
    <h1>Equipment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ equipment.id }}</td>
            </tr>
            <tr>
                <th>BrandName</th>
                <td>{{ equipment.brandName }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ equipment.model }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ equipment.year ? equipment.year|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Identifier</th>
                <td>{{ equipment.identifier }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ equipment.price }}</td>
            </tr>
            <tr>
                <th>WarrantyExpires</th>
                <td>{{ equipment.warrantyExpires ? equipment.warrantyExpires|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ equipment.file }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('equipment_index') }}">back to list</a>

    <a href="{{ path('equipment_edit', {'id': equipment.id}) }}">edit</a>

    {{ include('equipment/_delete_form.html.twig') }}
{% endblock %}
